[commit]
	gpgsign = true
    template = .gitmessage
[gpg]
	program = /usr/local/bin/gpg
[sequence]
	editor = /usr/bin/vim
[core]
	editor = /usr/bin/vim
	pager = delta
[push]
	autoSetupRemote = True
[http]
	postBuffer = 257286400
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[interactive]
	diffFilter = delta --color-only --diff-so-fancy
[delta]
  navigate = true
[merge]
	conflictStyle = zdiff3


